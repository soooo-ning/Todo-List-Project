<!DOCTYPE html>
<html lang="en">
  <%- include('include/header', { title: 'search-pw' })%>
  <body>
    <div class="main_wrap">
      <div class="main_img">
        <a href="/" class="main_title">Todo Checkk</a>
      </div>
      <div class="main_con">
        <h3 class="sub_title">
          <span>Find</span>
        </h3>
        <form name="form-find" method="post">
          <label>
            <span>EMAIL</span>
            <input
              type="email"
              placeholder="가입시 입력했던 이메일을 입력하세요"
              name="userEmail"
              required
            />
          </label>

          <button type="submit">임시 비밀번호 발급</button>
        </form>
      </div>
    </div>
    <script>
      const inputs = document.querySelectorAll('input');

      inputs.forEach((input, index) => {
        input.addEventListener('keydown', function (event) {
          if (event.key === 'Enter') {
            event.preventDefault();
            if (inputs[index + 1]) {
              inputs[index + 1].focus();
            }
          }
        });
      });

      document.forms['form-find'].addEventListener('submit', function (event) {
        event.preventDefault();

        const email = document.querySelector('[name="userEmail"]').value.trim();

        if (!email) {
          alert('이메일을 입력해주세요.');
          return;
        }

        axios
          .get(`/auth/api/search-pw?email=${encodeURIComponent(email)}`)
          .then((response) => {
            if (response.data.success) {
              alert(`임시 비밀번호: ${response.data.tempPassword}`);
              window.location.href = '/';
            }
          })
          .catch((error) => {
            console.error(error);

            if (error.response) {
              if (error.response.data && error.response.data.message) {
                alert(error.response.data.message);
              } else {
                alert('서버 오류가 발생했습니다. 다시 시도해주세요.');
              }
            } else if (error.request) {
              alert('서버에 응답이 없습니다. 다시 시도해주세요.');
            } else {
              alert('알 수 없는 오류가 발생했습니다.');
            }
          });
      });
    </script>
  </body>
</html>
